<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PUM.LAB3.Hangman"
             Title="Hangman">
    <StackLayout Padding="20" Spacing="10">
        <Label x:Name="WordLabel"
           FontSize="24"
           HorizontalOptions="Center" />
        <Label x:Name="AttemptsLabel"
           FontSize="18"
           HorizontalOptions="Center" />
        <Label x:Name="UsedLettersLabel"
           FontSize="18"
           HorizontalOptions="Center" />
        <Entry x:Name="GuessEntry"
           Placeholder="Wprowadź literę"
           Keyboard="Text"
           MaxLength="1" />
        <Button Text="Zgadnij" Clicked="OnGuessButtonClicked" />
        <Button
            Text="Wróć"
            Clicked="ReturnClicked"
            HorizontalOptions="Fill" />
    </StackLayout>
</ContentPage>
