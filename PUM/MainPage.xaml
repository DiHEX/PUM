<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PUM.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="dotnet_bot.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="dot net bot in a race car number eight" />
            
            <Button
                Text="Celcjusze"
                Clicked="OnOpenTemperaturePageClicked"
                HorizontalOptions="Fill" />

            <Button
                Text="Wisielec"
                Clicked="OnOpenHangmanPageClicked"
                HorizontalOptions="Fill" />

            <Button
                Text="Pietnastka"
                Clicked="OnOpenPuzzle15GamePageClicked"
                HorizontalOptions="Fill" />

            <Button
                Text="Arkanoid"
                Clicked="OnOpenArkanoidGamePageClicked"
                HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
